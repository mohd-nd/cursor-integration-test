<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cursor Submission App</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="site-header">
        <div class="wrapper">
            <h2>Cursor Submission App</h2>
            <p>Bridge between operators and Cursor Cloud Agent</p>
        </div>
    </header>
    <main class="wrapper">
        @RenderBody()
    </main>
    <footer class="site-footer">
        <div class="wrapper">
            <span>&copy; @DateTime.UtcNow.Year Cursor Submission App</span>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
